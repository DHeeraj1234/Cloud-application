<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/upl"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.deerajreddy.app.MainActivity">

    <Button
        android:id="@+id/btnreg"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button"
        android:onClick="btnRegistrationUser_Click"
        android:text="Registration"
        android:textColor="#afeeee" />

    <Button
        android:id="@+id/btnlog"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/btnreg"
        android:layout_alignStart="@+id/btnreg"
        android:layout_below="@+id/btnreg"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:onClick="btnUserLogin_Click"
        android:text="Login"
        android:textColor="#afeeee" />

</RelativeLayout>
