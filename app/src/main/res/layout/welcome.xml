<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/im1"
    android:visibility="visible">

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="Hello"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivGallery"
        android:layout_toEndOf="@+id/ivGallery"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"/>

    <ImageView
        android:id="@+id/ivCamera"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="@android:dimen/app_icon_size"
        app:srcCompat="@drawable/cam"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        android:layout_marginTop="28dp" />

    <ImageView
        android:id="@+id/ivGallery"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="@android:dimen/app_icon_size"
        app:srcCompat="@drawable/imggal"
        android:layout_above="@+id/ivImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/ivUpload"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="@android:dimen/app_icon_size"
        android:src="@drawable/upload"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_alignTop="@+id/ivCamera"
        android:layout_toLeftOf="@+id/ivView"
        android:layout_toStartOf="@+id/ivView"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"

        android:layout_height="80dp"
        android:layout_below="@+id/ivImage"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/logoutbutt"
        android:onClick="logout"
       />

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="200dp"

        android:layout_height="200dp"
        android:layout_marginTop="55dp"
        android:src="@android:drawable/star_big_on"
        android:layout_below="@+id/ivView"
        android:layout_centerHorizontal="true"/>



    <ImageView
        android:id="@+id/ivView"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="@android:dimen/app_icon_size"
        android:src="@drawable/download"
        android:layout_alignTop="@+id/ivUpload"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"/>
</RelativeLayout>
